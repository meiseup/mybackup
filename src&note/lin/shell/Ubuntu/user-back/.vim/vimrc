"imap [ []<Esc>i
"imap { {}<Esc>i
"imap ( ()<Esc>i
imap <F3> <ESC>:sh<CR>
let mapleader=";"
nmap <Leader>sh :sh<CR>
"nmap <F3> :sh<CR>
nmap <Leader>v V
imap <c-F12> <Esc>:qall<CR>
nmap <c-F12> :qall<CR>
"nmap <Esc><Esc><Esc> :nohlsearch<CR>
nmap <c-S-f> gg=GggVG:!indent -ce -npsl -br % -o %<CR>
nmap <c-j> <c-w>j

#!/bin/bash
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -asilF --color=auto'
alias la='ls -A'
alias ld='ls -ald'
alias l='ls -ASFlhr'
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
alias pwd='pwd -P'
alias G='cd /media/Application'
alias F='cd /media/Fedora'
alias O='cd /media/OpenSUSE'
alias T='cd /media/tmp'
alias rs='sudo sync;sudo sync;sudo sync; sudo reboot now'
alias cs='sudo sync;sudo sync;sudo sync;sudo shutdown -hf now'
alias sync='sudo sync;sudo sync;sudo sync;sudo sync;sudo sync'
alias sl='skill -u '
alias du='du -h'
alias free='free -hmt'
alias ps='ps -aux'
alias df='df -h'
alias cp='cp -iuv'
alias rm='rm -iv'
alias mv='mv -ivu'
alias mkdir='mkdir -pv -m 740'
alias apti='sudo apt-get -y install '
alias aptu='sudo apt-get -y update && sudo apt-get -y upgrade'
alias aptr='sudo apt-get purge'
alias apts='apt-cache search'
alias swapfiles='sudo swapoff /swap/swapfile'
alias umt='sudo umount -v /media/tmp'
alias uma='sudo umount -v /media/App'
alias ump='sudo umount -v /media/OpenSUSE'
alias umo='sudo umount -v /media/Others'
alias umf='sudo umount -v /media/Fedora'
alias ma='sudo mount -vw -t ntfs /dev/sda7 /media/App' 
alias mf='sudo mount -t ext4 /dev/sda5 /media/Fedora'
alias mp='sudo mount -t ext4 /dev/sda6 /media/OpenSUSE'
